{
  "name": "friendsofouro/kurrentdb-core",
  "description": "KurrentDB client for PHP (core)",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "eventsourcing",
    "eventstore",
    "KurrentDB"
  ],
  "authors": [
    {
      "name": "D. Bellettini",
      "homepage": "https://bellettini.eu/"
    },
    {
      "name": "Nicol√≤ Pignatelli",
      "email": "pignatelli.nicolo@gmail.com",
      "homepage": "http://nicolopignatelli.me/"
    },
    {
      "name": "Contributors",
      "homepage": "https://github.com/friendsofouro/kurrentdb-php-core/graphs/contributors"
    }
  ],
  "require": {
    "php": "^8.4",
    "friendsofouro/http-batch-contract": "^1.0",
    "psr/http-client-implementation": "*",
    "psr/http-factory-implementation": "*",
    "psr/http-message-implementation": "*",
    "friendsofouro/http-batch-implementation": "^1.0",
    "ramsey/uuid": "^4.9"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.48",
    "friendsofouro/http-batch-guzzle": "^1.0",
    "friendsofphp/php-cs-fixer": "^3.87",
    "guzzlehttp/guzzle": "^7.10",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^12.3",
    "rector/rector": "^2.1",
    "symfony/var-dumper": "^7.3"
  },
  "replace": {
    "dbellettini/geteventstore-core": "self.version",
    "dbellettini/php-eventstore-client": "self.version",
    "friendsofouro/geteventstore-core": "self.version"
  },
  "suggest": {
    "friendsofouro/kurrentdb-bundle": "Integrate KurrentDB with Symfony 7.3 or later",
    "friendsofouro/http-batch-guzzle": "Default PSR-7 + Batch implementation"
  },
  "autoload": {
    "psr-4": {
      "KurrentDB\\": "src/"
    },
    "files": [
      "src/Url/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "KurrentDB\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true
    },
    "bin-dir": "bin",
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.6.x-dev"
    }
  }
}
